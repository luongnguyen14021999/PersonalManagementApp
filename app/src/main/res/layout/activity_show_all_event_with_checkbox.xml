<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventList.ShowAllEventWithCheckboxActivity"
    android:layout_gravity="center"
    >

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="Click checkbox and then click DeleteEvent button to delete record!" />


    <Button
        android:id="@+id/deleteEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Delete Event"
        android:onClick="deleteEvent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        />


    <Button
        android:id="@+id/eventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Events"
        android:onClick="backToEvent"
        app:layout_constraintTop_toBottomOf="@+id/deleteRecord"
        />


</LinearLayout>